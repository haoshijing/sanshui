<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keke.sanshui.base.admin.dao.ConfigDAO">
    <sql id="all_columns">
        *
    </sql>
    <sql id = "tableName">
        t_system_config
    </sql>
    <select id="selectByKey" resultType="com.keke.sanshui.base.admin.po.SystemConfigPo"
            parameterType="java.lang.String">
        <!-- 具体的sql -->
        SELECT <include refid="all_columns"/> FROM
        <include refid="tableName"/>
        WHERE configKey = #{configKey}
    </select>

    <insert id="insert" parameterType="com.keke.sanshui.base.admin.po.SystemConfigPo">
        insert into  <include refid="tableName"/>
        (
        configKey,
        configValue,
        memo,
        createTime,
        status,
        regExp,
        errorMsg,
        type
        )
        VALUES (
         #{configKey},
        #{configValue},
        #{memo},
        #{createTime},
         #{status},
        #{regExp},
        #{errorMsg},
        #{type}
        )
    </insert>

    <update id="updateById" parameterType="com.keke.sanshui.base.admin.po.SystemConfigPo">
        update <include refid="tableName"/>
        <set>
            <if test="configKey != null and configKey != ''">
                configKey = #{configKey},
            </if>
            <if test="configValue != null and configValue != ''">
                configValue = #{configValue},
            </if>
            <if test="memo != null and memo != ''">
                memo = #{memo},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectByTypeAndStatus" resultType="com.keke.sanshui.base.admin.po.SystemConfigPo">
        select
        <include refid="all_columns"/>
        from
        <include refid="tableName"/>
        <where>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
        </where>
    </select>

</mapper>