<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.keke.sanshui.base.admin.dao.AgentDAO">
    <sql id="all_columns">
        *
    </sql>
    <sql id = "tableName">
        t_agent
    </sql>

    <select id = "selectById" resultType="AgentPo">
        SELECT <include refid="all_columns"/> FROM
        <include refid="tableName"/>
        where id = #{id}
    </select>
    <select id="selectList" parameterType="AgentPo" resultType="AgentPo">
        <!-- 具体的sql -->
        SELECT <include refid="all_columns"/> FROM
        <include refid="tableName"/>
        <where>
            1 = 1
            <if test = "agent.agentName != null and agent.agentName != ''">
               AND  agentName = #{agent.agentName}
            </if>
            <if test ="agent.level != null">
                AND level = #{agent.level}
            </if>
            <if test = "agent.parentId != null">
                AND parentId = #{agent.parentId}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="AgentPo" useGeneratedKeys="true" keyProperty="agent.id">
        Insert into t_agent
        (
        id,
        playerId,
        agentName,
        password,
        agentWeChartNo,
        agentNickName,
        level,
        parentId,
        status,
        memo,
        insertTime,
        lastUpdateTime
        )
        select
         #{agent.id},
        #{agent.playerId},
        #{agent.agentName},
        #{agent.password},
        #{agent.agentWeChartNo},
        #{agent.agentNickName},
        #{agent.level},
        #{agent.parentId},
        #{agent.status},
        #{agent.memo},
        #{agent.insertTime},
        #{agent.lastUpdateTime}

    </insert>

    <select id="selectAll" resultType="AgentPo">
        select playerId , id from  <include refid="tableName"/>
    </select>

</mapper>